<AdicionarVendasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        #Selecionar cliente
        Label:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.05
            id: label_selecionecliente
            text: "Selecione o cliente"
        ScrollView:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        #Selecionar produto
        Label:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.05
            text: "Selecione o produto"
            id: label_selecioneproduto
        ScrollView:
            pos_hint: {"right": 1, "top": 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        Label:
            id: label_data
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.05
            text: "01/01/2021"

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.45, "top":0.2}
            size_hint: 0.4, 0.2
            on_release: app.mudar_tela("homepage")
            text: "Cancelar"

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.95, "top":0.2}
            size_hint: 0.4, 0.2
            on_release: app.adicionar_venda()
            text: "Adicionar Venda"


        #Selecionar a unidade
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            id: unidades
            LabelButton:
                text: "kg"
                id: unidades_kg
                on_release: app.selecionar_unidade("unidades", "unidades_kg")
            LabelButton:
                text: "unidades"
                id: unidades_unidades
                on_release: app.selecionar_unidade("unidades", "unidades_unidades")
            LabelButton:
                text: "litros"
                id: unidades_litros
                on_release: app.selecionar_unidade("unidades", "unidades_litros")
        #Preço
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                text: "Preço Total (R$)"
                id: label_preco
            TextInput:
                id: preco_total
                hint_text: "Digite apenas números"
        #Quantidade
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                text: "Quantidade total"
                id: label_quantidade
            TextInput:
                id: quantidade_total
                hint_text: "0"

